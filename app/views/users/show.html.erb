
<%= form_for ([@user,  @user.articles.build]) do |f| %>
  <p>
    <%= f.label :subject %><br>
    <%= f.text_area :title, :cols => 40, :rows => 5 %>
  </p> 
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :detail, :cols => 40, :rows => 5 %>
  </p> 
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
